<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_click_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/img_zhibo_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/logo64"  />

        <TextView
            android:id="@+id/tv_zhibo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_zhibo_logo"
            android:layout_alignTop="@id/img_zhibo_logo"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="浙江卫视[高清]" />

        <ImageView
            android:id="@+id/ib_schooltv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="2dp"
            android:src="@mipmap/arrow_right" />
    </RelativeLayout>


</LinearLayout>
